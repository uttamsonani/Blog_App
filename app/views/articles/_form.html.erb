<%= form_with model: @article do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control border border-dark text-center" %>

            <% @article.errors.full_messages_for(:title).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div><br>

    <div>
        <%= form.label :body %>
        <%= form.text_area :body, class: "form-control border border-dark" %>

        <% @article.errors.full_messages_for(:body).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div><br>

    <div>
        <%= form.label :status %><br>
        <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
    </div><br>

    <div>
        <%= form.submit class: "btn classic2"  %><br><br>

        <%# button for BACK %>
        <%= link_to "Back to Articles", articles_path, class: "btn btn-outline-primary" %>
    </div>
<% end %>