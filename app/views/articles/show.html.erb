<h2> <%= @article.title %> </h2>
<p> <%= @article.body %> </p>

<%# Button for EDIT  %>
<%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-info" %> <strong>|</strong>

<%# Button for DESTROY  %>
<%= link_to "Destroy", article_path(@article), class: "btn btn-outline-danger", data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %> <strong>|</strong>

<%# Button for BACK  %>
<%= link_to "Back to Articles", articles_path, class: "btn btn-outline-primary" %><br><br>




<h4>Comments</h4>
<%= render "comments/comment" %><br>

<h3>Add Comments:</h3><br>
<%= render "comments/form" %>